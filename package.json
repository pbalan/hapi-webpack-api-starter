{
  "name": "hapi-webpack-api-starter",
  "version": "0.0.1",
  "description": "A HapiJS and Webpack API server starter kit",
  "author": "Prashant Balan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://opsbicode.corp.apple.com/prashant-balan/node-auth"
  },
  "keywords": [
    "HapiJS",
    "Webpack",
    "ES6",
    "API"
  ],
  "scripts": {
    "start-message": "babel-node tools/startMessage.js",
    "prestart": "npm-run-all --parallel start-message remove-dist",
    "start": "npm-run-all --parallel test:watch open:src lint:watch hapi-server",
    "open:src": "babel-node tools/srcServer.js",
    "open:dist": "babel-node tools/distServer.js",
    "lint": "esw webpack.config.* src tools",
    "lint:watch": "npm run lint -- --watch",
    "clean-dist": "npm run remove-dist && mkdir dist",
    "remove-dist": "rimraf ./dist",
    "prebuild": "npm run clean-dist && npm run lint && npm run test",
    "build": "babel-node tools/build.js && npm run open:dist",
    "test": "mocha tools/testSetup.js \"src/**/*.spec.js\" --reporter progress",
    "hapi-server": "node tools/hapiServer",
    "test:watch": "npm run test -- --watch",
    "prod-server": "export NODE_ENV=production && npm run build && node tools/prodServer"
  },
  "dependencies": {
    "hapi": "13.4.1",
    "babel-loader": "^4.2.0",
    "source-map-support": "^0.2.10",
    "http-proxy-middleware": "0.15.2",
    "webpack": "^1.7.3"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.0.4",
    "babel-loader": "6.2.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "browser-sync": "2.12.12",
    "chai": "^3.5.0",
    "connect-history-api-fallback": "1.2.0",
    "cross-env": "1.0.7",
    "eslint": "2.11.1",
    "eslint-plugin-import": "1.6.1",
    "eslint-plugin-jsx-a11y": "1.0.4",
    "eslint-plugin-react": "5.0.1",
    "eslint-watch": "2.1.11",
    "mocha": "^2.5.3",
    "npm-run-all": "2.1.1",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-dev-server": "1.14.1",
    "webpack-hot-middleware": "^2.10.0"
  }
}
